{
    "name": "\u00A7a\u00A7nDragon's Breath",
    "description": "You have the ancestral ability to breathe fire.\n-breathe fire as an attack with primary key. Light furnaces with secondary-",
    "type": "origins:multiple",
    "activate_breath": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "ntorigins:dragon/dragon_breath_breath_timer",
            "change": 1,
            "operation": "set"
        },
        "cooldown": 2400,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 15
        }
    },
    "breath_timer": {
        "type": "origins:resource",
        "min": 0,
        "max": 6,
        "hud_render": {
            "should_render": false
        },
        "max_action": {
            "type": "origins:change_resource",
            "resource": "ntorigins:dragon/dragon_breath_breath_timer",
            "change": 0,
            "operation": "set"
        }
    },
    "breath_timer_tick": {
        "type": "origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "ntorigins:dragon/dragon_breath_breath_timer",
                    "change": 1
                }
            ]
        },
        "condition": {
            "type": "origins:resource",
            "resource": "ntorigins:dragon/dragon_breath_breath_timer",
            "comparison": ">",
            "compare_to": 0
        }
    },
    "breath_tick_actions": {
        "type": "origins:action_over_time",
        "interval": 1,
        "condition": {
            "type": "origins:all_of",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "ntorigins:dragon/dragon_breath_breath_timer",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "rising_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.ender_dragon.growl",
            "volume": 1,
            "pitch": 1
        },
        "entity_action": {
            "type": "origins:raycast",
            "distance": 15,
            "entity": false,
            "block": true,
            "shape_type": "outline",
            "block_action": {
                "type": "origins:if_else_list",
                "actions": [
                    {
                        "action": {
                            "type": "origins:add_block",
                            "block": "minecraft:fire"
                        },
                        "condition": {
                            "type": "origins:replaceable"
                        }
                    }
                ]
            },
            "command_along_ray": "function ntorigins:dragon/breathe_fire_tick"
        }
    }
}