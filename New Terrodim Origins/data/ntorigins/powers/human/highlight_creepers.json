{
    "type": "origins:multiple",
    "name": "\u00A7a\u00A7nCreeper Hunter",
    "description": "Your experience slaying creepers gives you a sixth sense for locating them.\n-use ability to highlight nearby creepers-",
    "activate_scream": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "ntorigins:human/highlight_creepers_timer",
                    "change": 1,
                    "operation": "set"
                }
            ]
            
        },
        "cooldown": 1800,
        "hud_render": {
            "should_render": false
        },
        "key": {
            "key": "key.origins.primary_active"
        }
    },
    "timer": {
        "type": "origins:resource",
        "min": 0,
        "max": 31,
        "hud_render": {
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 1
        }
    },
    "timer_tick": {
        "type": "origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "ntorigins:human/highlight_creepers_timer",
            "change": 1
        },
        "condition": {
            "type": "origins:resource",
            "resource": "ntorigins:human/highlight_creepers_timer",
            "comparison": ">",
            "compare_to": 0
        }
    },
    "glow": {
        "type": "origins:entity_glow",
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "ntorigins:human/highlight_creepers_timer",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "ntorigins:human/highlight_creepers_timer",
                    "comparison": "<",
                    "compare_to": 31
                }
            ]
        },
        "entity_condition": {
            "type": "origins:entity_type",
            "entity_type": "minecraft:creeper"
        },
        "bientity_condition": {
            "type": "origins:distance",
            "comparison": "<=",
            "compare_to": 30
        }
    },
    "timer_reset": {
        "interval": 20,
        "type": "origins:action_over_time",
        "condition": {
            "type": "origins:resource",
            "resource": "ntorigins:human/highlight_creepers_timer",
            "comparison": ">",
            "compare_to": 30
        },
        "rising_action": {
            "type": "origins:change_resource",
            "resource": "ntorigins:human/highlight_creepers_timer",
            "change": 0,
            "operation": "set"
        }
    }
}